{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "operationType": {
      "type": "string",
      "enum": ["DEPOSIT", "WITHDRAWAL"]
    },
    "amount": {
      "type": "integer",
      "minimum": 0
    },
    "transactionId": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["operationType", "amount", "transactionId", "date"],
  "additionalProperties": false
}